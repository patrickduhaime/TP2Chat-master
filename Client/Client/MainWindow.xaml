<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="200" WindowStartupLocation="CenterScreen">
    <DockPanel HorizontalAlignment="Center">
        <Label DockPanel.Dock="Top" Margin="0,60,0,0">Veuillez entrer votre nom</Label>
        <Button DockPanel.Dock="Bottom" Height="20" Margin="0,0,0,60" Click="Button_Click">Connexion</Button>
        <Label x:Name="lblError" DockPanel.Dock="Bottom" Height="26" Foreground="Red" VerticalAlignment="Top"></Label>
        <TextBox x:Name="tbName" DockPanel.Dock="Top" Height="20" VerticalAlignment="Top">Utilisateur</TextBox>
    </DockPanel>
</Window>
